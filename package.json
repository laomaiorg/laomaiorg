    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "npm-run-all": "^4.1.5",
    "pagefind": "^0.10.7",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-pxtorem": "^6.0.0",
    "tailwindcss": "^3.2.4"
  }
